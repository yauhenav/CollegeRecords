<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>CollegeRecords</display-name>
  <listener>
    <listener-class>com.yauhenav.web.SessionListener</listener-class>
  </listener>  
    
  <servlet>
    <servlet-name>CollegeRecords</servlet-name>
    <servlet-class>com.yauhenav.web.CollegeRecords</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>CollegeRecords</servlet-name>
    <url-pattern>/modify</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>  
    
</web-app>
